<?xml version="1.0"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>CouchbaseVerifier</ToolCommandName>
    <PackageOutputPath>../build/</PackageOutputPath>
    <Version>1.0.1</Version>
    <Nullable>enable</Nullable>
    <PackageLicense>https://github.com/malscent/CouchbaseVerifier/blob/master/LICENSE</PackageLicense>
    <RepositoryUrl>https://github.com/malscent/CouchbaseVerifier</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <README>./Readme.md</README>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CommandDotNet" Version="6.0.5"/>
    <PackageReference Include="CommandDotNet.IoC.MicrosoftDependencyInjection" Version="4.0.1"/>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1"/>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1"/>
  </ItemGroup>
</Project>
